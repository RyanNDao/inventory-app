extends layout 

block content
    h1(class="main-header") #{title}
    hr(style='width:100%;')
    if category
        div(class='delete-container')
            h2 Are you sure you want to delete this category?
            h4 #[strong Category Name:] #{category.name} (ID: #{category._id})
            h4 #[strong Category Description:] #{category.description}
            form(class='decision-container' method='POST' action='')
                input(type='submit' value='Yes')
                input(type='submit' value='No' formaction=`/category/${category.name}`)
    else
        h2 Category Not Found