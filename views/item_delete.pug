extends layout 

block content
    h1(class="main-header") #{title}
    hr(style='width:100%;')
    if item
        div(class='delete-container')
            h2 Are you sure you want to delete this item?
            h4 #[strong Item Name:] #{item.name} (ID: #{item._id})
            h4 #[strong Item Description:] #{item.description}
            h4 #[strong Item Category:] #{item.category.name}
            h4 #[strong Item Inventory Count:] #{item.in_stock_amount}
            form(class='decision-container' method='POST' action='')
                input(type='submit' value='Yes')
                input(type='submit' value='No' formaction=`/item/${item.name}`)
    else
        h2 Item Not Found